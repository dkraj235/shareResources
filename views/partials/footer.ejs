<script>
  const input = document.getElementById('message');
  const charCount = document.getElementById('char-count');
  const maxChars = 100; // Set your desired character limit here

  input.addEventListener('input', function () {
      const currentChars = input.value.length;
      const remainingChars = maxChars - currentChars;

      if (remainingChars >= 0) {
          charCount.textContent = `Characters remaining: ${remainingChars}`;
      } else {
          // If the user exceeds the limit, truncate the input value
          input.value = input.value.substring(0, maxChars);
      }
  });
</script>